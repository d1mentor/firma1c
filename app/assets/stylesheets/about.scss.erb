.about {
	position: relative;
	min-height: 305px;
	height: 100%;

	&__wallpaper-1 {
		position: absolute;
		top: -40px;
		left: 0;
		width: 100%;
		height: 113.1147540983607%;
		background: url("<%= asset_path('aboutWallpaper.png') %>") 50% / cover no-repeat;
		z-index: -1;
	}

	&__row {
		display: flex;
		min-height: 305px;
		height: 100%;
	}

	&__label {
		color: #ffffff;
		font-size: 45px;
		font-weight: 900;
		line-height: 1.5em;
		align-self: center;
	}

	&__line {
		width: 75px;
		height: 3px;
		background: #fff;
	}
}

@media (max-width: 1169px) {
	.about {
		&__row {
			padding: 20px;
		}
	}
}
