.slider {
	position: relative;
	padding: 55px 60px;
	min-height: 780px;
}

.slider .slick-arrow {
	position: absolute;
	margin: -15px 0px 0px 0px;
	top: 0;
	z-index: 10;
	font-size: 0;
	width: 120px;
	height: 100%;
}
.slider .slick-arrow.slick-prev {
	left: 0;
	background: url("<%= asset_path('slider/arrow_l2.png') %>") left 50% / 30px no-repeat;
}
.slider .slick-arrow.slick-next {
	right: 0;
	background: url("<%= asset_path('slider/arrow_r2.png') %>") right 50% / 30px no-repeat;
}
.slider__item {
	text-align: center;
	width: 100%;
}
.slider__item img{
	object-fit: cover;
	width: 100%;
}
