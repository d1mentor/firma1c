<p style="color: green"><%= notice %></p>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Дата</th>
      <th scope="col">Работник</th>
      <th scope="col">Работа</th>
      <th scope="col">Выполненый объем</th>
      <th scope="col">Часы</th>
      <th scope="col">...</th>
    </tr>
  </thead>
  <tbody>
      <%= render @diary %>
  </tbody>
</table>

<div class="container">
<strong>Комментарий к записи</strong>:<p><%= @diary.description %></p>
  <%= link_to "Редактировать", edit_diary_path(@diary), class: "btn btn-primary" %> 
  <%= link_to "Все записи", diaries_path, class: "btn btn-primary" %>
  <%= link_to "Добавить запись", new_diary_path, class: "btn btn-success" %>
  <br>
  <br>
  <%= button_to "Удалить", @diary, method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: 'Точно?' } } %>
</div>
