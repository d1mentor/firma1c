<div class="container">
	<h1>Создание галереи</h1>

	<%= form_with(model: @gallery) do |form| %>
  		<div>
    		<%= form.label :Название, style: "display: block", class: "form-label" %>
    		<%= form.text_field :name, class: "form-control" %>
  		</div>
  		<br>
  		<div>
  			<%= form.file_field :images, multiple: true %>
  		</div>

  		<%= form.hidden_field :galleryable_type, value: params[:galleryable_type] %>
  		<%= form.hidden_field :galleryable_id, value: params[:galleryable_id] %>

  		<br>
  		<div>
    		<%= form.submit "Готово", class: "btn btn-success" %>
  		</div>
	<% end %>

</div>
