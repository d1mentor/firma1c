<tr class="table-success">
    
    <% if instrument.galleries.count > 0 %>
      <% if instrument.galleries.first.images %>
        <td><%= image_tag(instrument.galleries.first.images.first.thumb.url, class: "embed") %></td>
      <% else %>
        <td></td>
      <% end %>
    <% else %>
      <td></td>
    <% end %>

    <td><%= instrument.name %></td>
    <td><%= instrument.description %></td>
    <td><%= instrument.location.name %></td>
    <td><%= link_to("Подробнее", instrument_path(instrument)) %></td>
</tr>