<%= form_with(model: payment) do |form| %>
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  <%= form.label :Тип_платежа, style: "display: block", class: "form-label" %>
  <%= form.select(:payment_type, { Выбрать: "", Приход: "Приход", Расход: "Расход" }, {}, onChange: "func();") %>
  </div>

  <div>
    <%= form.label :Дата, style: "display: block", class: "form-label" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div>
    <%= form.label :Сумма, style: "display: block", class: "form-label" %>
    <%= form.number_field :size, class: "form-control" %>
  </div>

  <div>
    <%= form.label :Комментарий, style: "display: block", class: "form-label" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :Капитал?, style: "display: block", class: "form-label" %>
    <%= form.check_box :capital %>
  </div>

  <%= form.hidden_field :source_type, value: params[:source_type] %>
  <%= form.hidden_field :source_id, value: params[:source_id] %>

  <br>
  <div>
    <%= form.submit "Готово", class: "btn btn-success not-show" %>
  </div>
<% end %>
