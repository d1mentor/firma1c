  <div>
    <%= form.label :location_id, style: "display: block" %>
    <%= form.select(:location_id, Location.all.collect {|p| [ p.name, p.id ] }) %>
  </div>

  <div>
    <%= form.label :materials, style: "display: block" %>
    <%= form.text_field :materials %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
