      <h2><%= pluralize(supply.errors.count, "error") %> prohibited this supply from being saved:</h2>

      <ul>
        <% supply.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :supplier_id, style: "display: block" %>
    <%= form.select(:supplier_id, Supplier.all.collect {|p| [ p.name, p.id ] }) %>
