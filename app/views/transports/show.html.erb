<p style="color: green"><%= notice %></p>

<%= render @transport %>

<div>
  <%= link_to "Edit this transport", edit_transport_path(@transport) %> |
  <%= link_to "Back to transports", transports_path %> |
  <%= link_to "Добавить платёж", new_payment_path(source_type: "#{@transport.class.name}", source_id: "#{@transport.id}") %>

  <%= button_to "Destroy this transport", @transport, method: :delete %>
</div>

<h2 class="text-center">Платежи</h2>

<div id="payments">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Дата</th>
      <th scope="col">Сумма</th>
      <th scope="col">Назначение</th>
      <th scope="col">...</th>
    </tr>
  </thead>
  <tbody>
    <% @transport.payments.each do |payment| %>
      <%= render payment %>
    <% end %>
  </tbody>
  </table>
</div>
