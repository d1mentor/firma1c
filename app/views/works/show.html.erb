<p style="color: green"><%= notice %></p>

<%= render @work %>

<br>
<div class="text-center">
  <%= link_to "Редактировать", edit_work_path(@work, location_id: @work.location.id), class: "btn btn-primary" %> 
  <%= link_to "Назад к списку", works_path, class: "btn btn-primary" %> 
  <%= link_to "Добавить платёж", new_payment_path(source_type: "#{@work.class.name}", source_id: "#{@work.id}"), class: "btn btn-success" %>
  <br>
  <br>
  <%= button_to "Удалить", @work, method: :delete, class: "btn btn-danger" %>
</div>
<br>

<% if @work.payments.count != 0 %>
<h2 class="text-center">Платежи</h2>

<div id="payments">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Дата</th>
      <th scope="col">Сумма</th>
      <th scope="col">Назначение</th>
      <th scope="col">...</th>
    </tr>
  </thead>
  <tbody>
    <% @work.payments.each do |payment| %>
      <%= render payment %>
    <% end %>
  </tbody>
  </table>
</div>
<% end %>